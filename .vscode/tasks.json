			"command": "make",
			"args": [ "" ],
			"type": "shell"
		},
		{
			"label": "flash stm32 firmware",
			"group": {
				"isDefault": false,
				"kind": "test"
			},
			"options": { "cwd": "${workspaceFolder}/stm32f091" },
			"command": "make flash",
			"args": [ "" ],
			"type": "shell"
		},
		{
			"label": "generate compilation db",
			"group": {
				"isDefault": false,
				"kind": "test"
			},
			"options": { "cwd": "${workspaceFolder}/stm32f091" },
			"command": "make compile_commands",
			"args": [ "" ],
			"type": "shell"
		}
	]
