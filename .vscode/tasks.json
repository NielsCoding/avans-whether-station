{
	"version": "2.0.0",
	"options": {
		"cwd": "${workspaceFolder}",
		"shell": {
			"executable": "C:/msys64/msys2_shell.cmd",
			"args": [ "-defterm", "-no-start", "-mingw64", "-shell", "sh", "-here", "-c" ],
		}
	},
	"tasks": [
		{
			"label": "build stm32 firmware",
			"group": {
